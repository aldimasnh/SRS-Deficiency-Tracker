<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    android:paddingHorizontal="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_grid1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:outlineSpotShadowColor="@color/white"
        android:outlineAmbientShadowColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/leftIconTap">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_sync_24"
                android:background="@drawable/circle"
                android:backgroundTint="@color/yellowMain"
                android:outlineSpotShadowColor="@color/black"
                android:outlineAmbientShadowColor="@color/black"
                android:elevation="5dp"
                android:id="@+id/leftIconSrc"
                app:tint="@color/white" />
            <TextView
                android:paddingHorizontal="10dp"
                android:layout_marginTop="-10dp"
                android:gravity="center"
                android:fontFamily="@font/segoeuib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CHECK MAPS"
                android:id="@+id/leftIconDescription"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_grid2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:outlineSpotShadowColor="@color/white"
        android:outlineAmbientShadowColor="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:id="@+id/rightIconTap">
            <ImageView
                android:layout_margin="10dp"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:padding="7dp"
                android:src="@drawable/ic_baseline_sync_24"
                android:background="@drawable/circle"
                android:backgroundTint="@color/yellowMain"
                android:outlineSpotShadowColor="@color/black"
                android:outlineAmbientShadowColor="@color/black"
                android:elevation="5dp"
                android:id="@+id/rightIconSrc"
                app:tint="@color/white" />
            <TextView
                android:layout_marginTop="-10dp"
                android:gravity="center"
                android:fontFamily="@font/segoeuib"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UPDATE DATA"
                android:paddingHorizontal="10dp"
                android:id="@+id/rightIconDescription"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>