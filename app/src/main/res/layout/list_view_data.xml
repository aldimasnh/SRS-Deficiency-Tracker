<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLyListData">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

                <TextView
                    android:layout_weight="0.8"
                    android:id="@+id/tv_tgl_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="21 April 2020"
                    android:gravity="center|left"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:fontFamily="@font/seguisb"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"/>
                <TextView
                    android:layout_weight="0.5"
                    android:id="@+id/tv_list_idPk"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="3123"
                    android:gravity="center|left"
                    android:textAlignment="center"
                    android:paddingRight="5dp"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:fontFamily="@font/seguisb"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_lokasi_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="NBE OA E08"
                    android:gravity="center|left"
                    android:textAlignment="center"
                    android:paddingRight="5dp"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:fontFamily="@font/seguisb"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_kondisi_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Berat"
                    android:gravity="center|left"
                    android:textAlignment="center"
                    android:paddingRight="5dp"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:fontFamily="@font/seguisb"/>
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_status_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Sudah ditangani"
                    android:gravity="center|left"
                    android:textAlignment="center"
                    android:paddingRight="5dp"
                    android:textSize="16sp"
                    android:paddingLeft="5dp"
                    android:fontFamily="@font/seguisb"/>

                <LinearLayout
                    android:id="@+id/llDelList"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:orientation="vertical"
                    android:gravity="center">
                        <ImageView
                            android:id="@+id/delListPk"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_delete_forever_black_24dp"
                            app:tint="@color/colorRed_A400" />
                </LinearLayout>
        </LinearLayout>
</LinearLayout>